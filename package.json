{
  "name": "grup-backend",
  "version": "1.0.0",
  "description": "Grup - Group Buying Platform Backend",
  "main": "server.mjs",
  "type": "module",
  "scripts": {
    "start": "node server.mjs",
    "dev": "nodemon server.mjs",
    "build": "npm run build:frontend",
    "build:frontend": "cd zahara-frontend-main && npm install && npm run build",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:frontend\"",
    "dev:frontend": "cd zahara-frontend-main && npm run dev",
    "setup": "npm install && cd zahara-frontend-main && npm install",
    "seed": "node scripts/seed-delivery-zones.js",
    "create-uploads": "node scripts/create-uploads-folder.js",
    "test": "jest",
    "test:notifications": "node test-notification-system.mjs",
    "test:groupbuy-notifications": "node test-groupbuy-notification.mjs",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "deploy:check": "bash scripts/deploy-production.sh",
    "deploy:production": "NODE_ENV=production npm start",
    "health:check": "curl -f http://localhost:$PORT/health || exit 1",
    "db:indexes": "node -e \"import('./config/database.js').then(({connectDatabase, createIndexes}) => connectDatabase().then(createIndexes).then(() => process.exit(0)).catch(e => {console.error(e); process.exit(1)}))\"",
        "db:test": "node -e \"import('./config/database.js').then(({connectDatabase}) => connectDatabase().then(() => {console.log('✅ Database connection successful'); process.exit(0)}).catch(e => {console.error('❌ Database connection failed:', e.message); process.exit(1)}))\""
  },
  "dependencies": {
    "@adminjs/express": "^6.1.0",
    "@adminjs/mongoose": "^4.1.0",
    "@tiptap/core": "^2.0.4",
    "@tiptap/extension-horizontal-rule": "^2.0.4",
    "adminjs": "^7.8.1",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.7.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "dotenv": "^16.6.1",
    "express": "^4.19.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.2.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.3.2",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^5.0.7",
    "nodemailer": "^6.9.7",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "slugify": "^1.6.6",
    "socket.io": "^4.7.5",
    "winston": "^3.17.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/node": "^22",
    "concurrently": "^9.2.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "group-buying",
    "ecommerce",
    "nodejs",
    "express",
    "mongodb",
    "socket.io"
  ],
  "author": "Grup Team",
  "license": "MIT"
}
